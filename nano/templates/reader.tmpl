{{if data.scanner_name}}
	<h2>Attached hardware: {{:data.scanner_name}}</h2>
	<div class="item">
		<div class="itemLabel">
			Status:
		</div>
		<div class="itemContent">
			{{:helper.link('Installed', null, {'connect_scanner' : 1}, data.using_scanner ? 'selected' : null)}}
			{{:helper.link('Uninstalled', null, {'connect_scanner' : 0}, !data.using_scanner ? 'selected' : null)}}
		</div>
		<div class="itemLabel">
			Drive:
		</div>
		<div class="itemContent">
			{{:helper.link('Enabled', null, {'PC_enable_component' : data.scanner_name}, data.scanner_enabled ? 'selected' : null)}}
			{{:helper.link('Disabled', null, {'PC_disable_component' : data.scanner_name}, !data.scanner_enabled ? 'selected' : null)}}
		</div>
		<div class="itemLabel">
			Actions:
		</div>
		<div class="itemContent">
			{{:helper.link('Download', null, {'scan' : 1}, data.check_scanning ? null : 'disabled')}}
			{{:helper.link('Save', null, {'save' : 1}, data.can_save_scan ? null : 'disabled')}}
			{{if data.can_view_scan}}
				{{:helper.link('Playback', null, {'play' : 1}, data.can_save_scan ? null : 'disabled')}}
			{{/if}}
		</div>
	</div>
	{{if data.can_view_scan}}
		<h3>Scan Preview:</h3><br>
		<div class = "block">
			{{:data.data_buffer}}
		</div>
	{{/if}}
{{else}}
	<h2>There is no drive attached.</h2>
{{/if}}
